{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ],
    "Properties": {
      "Application": "Todo.Core.Api"
    }
  },
  "ConnectionType": "SQLITE",
  "ConnectionStrings": {
    "todo-sqlite": "Data Source=todo-test.db;Version=3",
    "todo-mssql": "Data Source=ASUSROGR71650\\SQLEXPRESS;Initial Catalog=Todo;Integrated Security=SSPI;"
  },
  "AllowedHosts": "*"
}
